<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="csrf-token" content="{{_csrf}}">
        <title>Rilakkuma Store - Admin Panel</title>

        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <link rel="stylesheet" href="/css/font-awesome.min.css">
        <link rel="stylesheet" href="/css/admin.css">
    </head>
    <body>
        <div class="container">
            <h1>Rilakkuma Store <small>Admin Panel</small></h1>

            {{#equal adminSection 'login'}}

            {{else}}
                <ul class="nav nav-tabs">
                    <li role="presentation" {{#equal adminSection 'categories'}}class="active"{{/equal}}><a href="/admin/categories">Categories</a></li>
                    <li role="presentation" {{#equal adminSection 'products'}}class="active"{{/equal}}><a href="/admin/products">Products</a></li>
                    <li role="presentation" class="pull-right"><a href="/admin/logout" class="text-danger">Sign Out</a></li>
                </ul>
            {{/equal}}

            {{{body}}}
        </div>

        <!-- javascript libraries -->
        <script src="/lib/jquery-2.1.3.min.js"></script>
        <script src="/lib/bootstrap.min.js"></script>
        <script src="/lib/handlebars-v3.0.0.js"></script>
        <script src="/lib/xss-filters.1.0.6.min.js"></script>
        <script src="/lib/secure-handlebars-helpers.min.1.0.4.js"></script>
        <script src="/lib/ui.csrf.js"></script>
        {{#each uiScripts}}
        <script src="/lib/{{this}}"></script>
        {{/each}}
    </body>
</html>