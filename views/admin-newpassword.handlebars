<div id="new-password-form" class="row">
    <div class="col-md-4 col-md-push-7 message"></div>
    <div class="col-md-7 col-md-pull-4">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h3 class="panel-title">Change Password</h3>
            </div>
            <div class="panel-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="current-password" class="col-sm-3 control-label">Current Password</label>
                        <div class="col-sm-9">
                            <input type="password" class="form-control" id="current-password" name="password" placeholder="" required pattern="^.{8,}$" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="new-password" class="col-sm-3 control-label">New Password (length >= 8)</label>
                        <div class="col-sm-9">
                            <input type="password" class="form-control" id="new-password" name="newPassword" placeholder="" required pattern="^.{8,}$" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="confirm-password" class="col-sm-3 control-label">Confirm Password</label>
                        <div class="col-sm-9">
                            <input type="password" class="form-control" id="confirm-password" placeholder="" required pattern="^.{8,}$" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="button" class="btn btn-danger">Submit and Sign Out</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script id="warn-invalid-form-tpl" type="text/x-handlebars-template">
    {{!-- before context-parser-handlebars:
    <p>The following fields are invalid:</p>
    <ul>
        \{{#fields}}
        <li>\{{.}}</li>
        \{{/fields}}
    </ul>
    --}}

    <p>The following fields are invalid:</p>
    <ul>
        \{{#fields}}
        <li>\{{{yd .}}}</li>
        \{{/fields}}
    </ul>
</script>

<script id="success-message-tpl" type="text/x-handlebars-template">
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        \{{{yd message}}}
    </div>
</script>

<script id="error-message-tpl" type="text/x-handlebars-template">
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        \{{{message}}}
    </div>
</script>
